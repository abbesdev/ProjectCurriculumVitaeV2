<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/background_border"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/linearSkills">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="SKILLS" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:layout_marginLeft="15dp"

                android:text="Android" />

            <SeekBar
                android:id="@+id/androidSeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"></SeekBar>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"

                android:text="iOS        " />

            <SeekBar
                android:id="@+id/iosSeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"></SeekBar>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"

                android:text="Flutter  " />

            <SeekBar
                android:id="@+id/flutterSeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"></SeekBar>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearSkills"
        android:background="@drawable/background_border"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/linearLang">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Language" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <RadioGroup
            android:id="@+id/radioG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextTextPersonName2"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkArab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arabic" />

            <Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <CheckBox
                android:id="@+id/checkFr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French" />
            <Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <CheckBox
                android:id="@+id/checkEng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLang"
        android:background="@drawable/background_border"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/linearHobb">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="Hobbies" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <RadioGroup
            android:id="@+id/radioG4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music" />

            <Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <CheckBox
                android:id="@+id/checkSport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sport" />
            <Space
                android:layout_width="50dp"
                android:layout_height="0dp" />

            <CheckBox
                android:id="@+id/checkGames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Games" />
        </RadioGroup>
    </LinearLayout>
    <Space
        android:id="@+id/space2"
        android:layout_below="@id/linearHobb"
        android:layout_width="wrap_content"
        android:layout_height="70dp"/>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/space2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:text="SUBMIT"
        android:textColor="@color/colorSecondaryLight" />
</RelativeLayout>